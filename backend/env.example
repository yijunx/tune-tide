# Database Configuration
DB_HOST=tune-tide-postgres
DB_PORT=5432
DB_NAME=local-db
DB_USER=local-user
DB_PASSWORD=local-password
DB_OPTIONS=-c search_path=myschema

# Server Configuration
PORT=3001

# MinIO Configuration
MINIO_ENDPOINT=tune-tide-minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio_access_key
MINIO_SECRET_KEY=minio_secret_key
MINIO_BUCKET=tunetide-assets

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a new project or select existing one
# 2. Enable Google+ API
# 3. Go to Credentials > Create Credentials > OAuth 2.0 Client IDs
# 4. Set Authorized redirect URIs to: http://localhost:3001/api/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Secret (generate a random string for production)
JWT_SECRET=your_jwt_secret_key_here

# Session Secret (generate a random string for production)
SESSION_SECRET=your_session_secret_key_here

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Admin Email (comma-separated list of admin emails)
ADMIN_EMAILS=admin@example.com,another-admin@example.com 